<Window x:Class="WpfLedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.microsoft.com/winfx/2008"
        xmlns:local="clr-namespace:WpfLedApp"
        mc:Ignorable="d"
        Title="LED Control" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- LEDランプ -->
        <Ellipse Grid.Row="0"
                 Width="100" Height="100"
                 Fill="{Binding LedColor}"
                 Stroke="Black" StrokeThickness="2"
                 Margin="20"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <!-- ボタン -->
        <Button Grid.Row="1"
                Content="Toggle LED"
                Command="{Binding ToggleLedCommand}"
                Width="150" Height="40"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontSize="16"/>
    </Grid>
</Window>
